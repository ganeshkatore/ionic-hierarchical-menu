{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "noImplicitAny": true,
    "lib": [
      "es2015", "dom"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "types": [
      "jasmine",
      "node"
    ],
    "outDir": "dist"
  },
  "include": [
    "index.ts",
    "src/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "bundles",
    "dist"
  ],
  "angularCompilerOptions": {
    "genDir": "aot"
  },
  "awesomeTypeScriptLoaderOptions": {
    "useWebpackText": true
  }
}